@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor


<h2>Add a new Flavor</h2>
<hr />

@using (Html.BeginForm())
{
  @Html.Label("Flavor Name ")
  <br>
  @Html.TextBoxFor(model => model.FlavorName)
  <p>@Html.ValidationMessageFor(model => model.FlavorName, "", new { @class = "text-danger" })</p> 

  <input type="submit" value="Add new flavor"/>
}