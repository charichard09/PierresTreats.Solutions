@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Editing @Html.DisplayFor(model => model.FlavorName)</h2>
<hr />

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.Label("Updated Flavor Name") 
  <br>
  @Html.EditorFor(model => model.FlavorName)
  <p>@Html.ValidationMessageFor(model => model.FlavorName, "", new { @class = "text-danger" })</p> 

  <input type="submit" value="Save" />
}

<a href='@Url.Action("Index")'>
    <button type="button">Back to List</button>
</a>