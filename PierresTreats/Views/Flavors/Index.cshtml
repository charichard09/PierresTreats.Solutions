@{
  Layout = "_Layout";
}

@using PierresTreats.Models

<h3>Available Flavors</h3>

@if (Model.Count == 0)
{
  <p>There are no flavors in the database.</p>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<a href='@Url.Action("Create")'>
    <button type="button">Add a new flavor</button>
</a>